!!!
%html
  %head
    %title= page_title
    = render 'layouts/metas'
    = render 'layouts/head'


  %body{:id => bodyid, :class => bodyclass }
    - if notice
      %p.notice= notice
    #scroll-top
    #menu-dinamico
      = render 'layouts/menu'
    %header{:role => 'banner'}
      .wrapper
        %h1
          = link_to image_tag('/images/logo.png', :alt => 'La Post-A audiovisual'), root_path
    %nav.main-menu.wrapper
      = render 'layouts/menu'
    %section#content{:role => 'main'}
      = yield


  = render 'layouts/footer'


